{
  "name": "@viyv-browser/chrome-extension",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "package": "cd build && rm -rf .vite && zip -r ../viyv-browser-extension.zip . -x '.*'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf build"
  },
  "dependencies": {
    "@viyv-browser/shared": "workspace:*",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.28",
    "@types/chrome": "^0.0.287",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "vite": "^5.4.11"
  }
}
